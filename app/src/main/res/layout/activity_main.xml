<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/ContadorPosiciones"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Contador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />
    <Button
        android:id="@+id/btnIncremento"
        android:layout_width="143dp"
        android:layout_height="49dp"
        android:OnClick = "incrementoContador"
        android:text="INCREMENTA"
        android:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />
    <Button
        android:id="@+id/btnDecremento"
        android:layout_width="143dp"
        android:layout_height="49dp"
        android:OnClick="decrementoContador"
        android:text="Decrementa"
        android:backgroundTint="#DF3232"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toEndOf="parente"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />
    <Button
        android:id="@+id/btnResetear"
        android:layout_width="143dp"
        android:layout_height="49dp"
        android:OnClick="reseteaContador"
        android:text="Resetear"
        android:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toEndOf="parente"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.632" />

</androidx.constraintlayout.widget.ConstraintLayout>